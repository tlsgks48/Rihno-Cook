<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#9eb3c2"
        tools:context=".Menu6_list">

    <TextView
            android:id="@+id/menu6_list_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:background="#a6d683"
            android:textSize="20dp"
            android:padding="6dp"
            android:layout_marginBottom="2dp"
            android:text="레시피들" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:background="#2ca388"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:padding="6dp"
                    android:text="레시피"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/menu6_list_Text1"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/menu6_list_recycler"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginTop="4dp"
                    android:background="#a6d683"
                    android:layout_marginBottom="10dp"
                    android:text="쿡TV"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/menu6_list_Text2"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/menu6_list_recycler2"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:background="#2ca388"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:padding="6dp"
                    android:text="쿡토크"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/menu6_list_Text3"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/menu6_list_recycler3"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>