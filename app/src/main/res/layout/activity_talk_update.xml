<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Talk_update">

    <LinearLayout

            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_margin="3dp"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:text="글쓰기 - 수정"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"/>

        <TextView
                android:text="수정"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:padding="4dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Talk_update_submit"/>
    </LinearLayout>

    <EditText
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="555dp"
            android:inputType="textMultiLine"
            android:gravity="left"
            android:hint="오늘 특별한 일이나 새로운 소식이 있으셨나요. 소식을 다른 회원님들과 소통하며 나누세요~."
            android:ems="10"
            android:background="@null"
            android:id="@+id/Talk_update_text"/>

    <View
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView12"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">
        <FrameLayout
                android:id="@+id/Talk_update_imageView_layout"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:clickable="true"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    app:srcCompat="@drawable/gradient_bg"
                    android:id="@+id/Talk_update_imageView"/>
            <ImageView
                    android:clickable="true"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" app:srcCompat="@android:drawable/btn_dialog"
                    android:id="@+id/Talk_update_imageView_Delete"/>
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/Talk_update_add"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/add_to_photos_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>