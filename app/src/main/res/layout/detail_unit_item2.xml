<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:textSize="3dp"
                android:text="재료명"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Detail_unit_item_text2" android:layout_weight="1"/>
        <TextView
                android:textSize="3dp"
                android:text="단위"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Detail_unit_item_unit2" android:layout_weight="1"/>

    </LinearLayout>
    <View
            android:layout_marginBottom="2dp"
            android:layout_marginTop="1dp"
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView12"/>
</LinearLayout>