<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".recipe_comment">

    <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/Menu2_comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="11"
                android:hint="댓글로 궁금한 것을 남겨주세요."
                android:inputType="textPersonName" />

        <Button
                android:id="@+id/Menu2_comment_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="댓글 등록" />
    </LinearLayout>

    <View
            android:layout_margin="3dp"
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView14"/>

    <android.support.v7.widget.RecyclerView
            android:layout_margin="3dp"
            android:id="@+id/Menu2_comment_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    ></android.support.v7.widget.RecyclerView>
</LinearLayout>