<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_weight="1.4"
                    android:id="@+id/menu6_Item_image"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/menu6_Item_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="left|bottom"
                        android:padding="3dp"
                        android:textSize="16dp"
                        android:text="레시피"
                        android:textColor="#2ca388" />

                <TextView
                        android:padding="3dp"
                        android:textSize="14dp"
                        android:textColor="@android:color/black"
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                        android:id="@+id/menu6_Item_text"
                        android:layout_width="match_parent"
                        android:maxWidth="30dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="match_parent"/>

                <TextView
                        android:padding="3dp"
                        android:textColor="#80333639"
                        android:textSize="12dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="댓글"
                        android:id="@+id/menu6_Item_writer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>