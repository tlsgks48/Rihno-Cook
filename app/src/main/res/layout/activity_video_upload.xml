<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Video_upload">

    <LinearLayout
            android:background="#a6d683"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:textSize="20dp"
                android:text="쿡TV - 업로드"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"/>

        <TextView
                android:text="작성하기"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:padding="4dp"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Video_submit"/>
    </LinearLayout>



    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:text="레시피 제목"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="#9eb3c2"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:inputType="textPersonName"
                    android:hint="예) 파인애플 피자"
                    android:ems="10"
                    android:id="@+id/Video_title"/>
            <TextView
                    android:text="요리 비디오"
                    android:textSize="18dp"
                    android:background="#9eb3c2"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView22"/>

            <ImageView
                    android:background="#C0C0C0"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:srcCompat="@drawable/cam_image2"
                    android:id="@+id/Video_upload_image1"/>

<!--            <VideoView
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/Video_upload_video1"/>-->
            <TextView
                    android:text="요리내용"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="#9eb3c2"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="요리 내용을 원하는대로 적어주세요."
                    android:ems="10"
                    android:id="@+id/Video_text"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>