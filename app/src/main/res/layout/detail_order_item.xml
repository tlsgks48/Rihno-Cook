<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="2dp"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="18dp"
                android:id="@+id/Detail_order_item_number"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="3dp"
                android:textColor="@android:color/white"
                android:background="@drawable/round"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="1"
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_weight="1"/>
        <TextView
                android:gravity="center"
                android:text="내용"
                android:layout_marginRight="3dp"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:id="@+id/Detail_order_item_text"
                android:layout_weight="1"/>
        <ImageView
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="100dp" app:srcCompat="@drawable/no_image" android:id="@+id/Detail_order_item_image"
                android:layout_weight="1"/>

    </LinearLayout>
    <View
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView12"/>
</LinearLayout>