                        android:layout_weight="2"/>
            </LinearLayout>-->

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/Recipe_order_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <Button
                    android:text="요리순서 추가"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Recipe_order_add_button"/>

            <!--<TextView
                    android:text="완성사진"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/add_black"
                        android:id="@+id/cook_finish_imageView1"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/add_black"
                        android:id="@+id/cook_finish_imageView2"
                        android:layout_weight="1"/>
            </LinearLayout>-->
            <TextView
                    android:background="#C0C0C0"
                    android:text="요리팁/주의사항"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="예) 얼린 고기를 해동할 때는 미리 물에 넣어 두세요."
                    android:ems="10"
                    android:id="@+id/Recipe_Tip"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>