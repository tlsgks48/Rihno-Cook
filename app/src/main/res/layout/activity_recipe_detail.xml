    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView3"
                        android:background="#2ca388"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="레시피 제목" />

                <TextView
                        android:id="@+id/R_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="레시피 제목"
                        android:textSize="17dp"
                        android:textStyle="bold" />
            </LinearLayout>

            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView17"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#9eb3c2"
                        android:gravity="center"
                        android:text="레시피 작성자"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/R_detail_writer"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="레시피 작성자"
                        android:textSize="17dp"
                        android:textStyle="bold" />
            </LinearLayout>

            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView16"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#2ca388"
                        android:gravity="center"
                        android:text="레시피 내용"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/R_detail_text"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="내용"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView15"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#a6d683"
                        android:gravity="center"
                        android:text="레시피 팁"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/R_detail_tip"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="팁"
                        android:textSize="16dp" />
            </LinearLayout>

            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView14"/>


            <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="종류"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_kind" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="인원"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_count" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="요리시간"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_time" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="난이도"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_level" android:layout_weight="1"/>
            </LinearLayout>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView12"/>

            <TextView
                    android:textColor="#2ca388"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="6dp"
                    android:textSize="20dp"
                    android:text="재료"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textView34"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/R_detail_recyc_material"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="24dp"
                    />

            <TextView
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_height="5dp" android:id="@+id/textView19"/>

            <ImageView
                    android:id="@+id/R_detail_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/no_image" />

            <TextView
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="5dp" android:id="@+id/textView33"/>


            <TextView
                    android:textColor="#a6d683"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textSize="20dp"
                    android:text="요리 순서"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textView35"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/R_detail_recyc_order2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView23"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                <android.support.v7.widget.RecyclerView
                        android:layout_margin="3dp"
                        android:id="@+id/R_detail_recyc_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>