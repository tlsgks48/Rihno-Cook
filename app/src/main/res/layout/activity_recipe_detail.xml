    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:text="레시피 제목"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/R_detail_title"/>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView17"/>
            <TextView
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:text="레시피 작성자"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/R_detail_writer"/>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView16"/>
            <TextView
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_margin="3dp"
                    android:text="내용"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/R_detail_text"/>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView15"/>
            <TextView
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_margin="3dp"
                    android:text="팁"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/R_detail_tip"/>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView14"/>


            <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="종류"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_kind" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="인원"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_count" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="요리시간"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_time" android:layout_weight="1"/>
                <TextView
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="난이도"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_level" android:layout_weight="1"/>
            </LinearLayout>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView12"/>
            <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" app:srcCompat="@drawable/no_image"
                    android:id="@+id/R_detail_main_image"/>
            <TextView
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="5dp" android:id="@+id/textView33"/>
           <!-- <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_margin="3dp"
                        android:text="관심"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_good" android:layout_weight="1"/>
                <TextView
                        android:layout_margin="3dp"
                        android:text="댓글"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/R_detail_comment" android:layout_weight="1"/>
            </LinearLayout>-->
            <TextView
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:text="재료"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textView34"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_margin="3dp"
                    android:id="@+id/R_detail_recyc_material"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:textSize="20dp"
                    android:text="요리 순서"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" android:id="@+id/textView35"/>
            <View
                    android:background="#C0C0C0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/textView23"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_margin="3dp"
                    android:id="@+id/R_detail_recyc_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>