<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Menu3_list">

    <android.support.v7.widget.Toolbar
            android:id="@+id/detail_video_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a6d683"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >
    </android.support.v7.widget.Toolbar>

    <VideoView
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="350dp" android:id="@+id/menu3_list_videoView"/>

    <View
            android:layout_marginTop="16dp"
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView19"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView3"
                android:background="#2ca388"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="쿡TV 제목" />

        <TextView
                android:gravity="center"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:text="레시피 제목"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/menu3_list_title"/>

    </LinearLayout>


    <View
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView17"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#9eb3c2"
                android:gravity="center"
                android:text="쿡TV 작성자"
                android:textSize="18dp"
                android:textStyle="bold" />
        <TextView
                android:gravity="center"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:text="레시피 작성자"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp" android:id="@+id/menu3_list_writer"/>
    </LinearLayout>

    <View
            android:background="#C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/textView16"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#a6d683"
                android:gravity="center"
                android:text="쿡TV 내용"
                android:textSize="18dp"
                android:textStyle="bold" />
        <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:text="내용"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp" android:id="@+id/menu3_list_text"/>

    </LinearLayout>
</LinearLayout>