<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg"
        tools:context=".Login">

    <TextView
            android:text="쵳쿡 로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/textView"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="43dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="쵳쿡의 여러 서비스를 즐기려면 로그인 해주세요!"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/edit_email"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <EditText
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="이메일"
            android:ems="10"
            android:id="@+id/edit_email"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/edit_password"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:ems="10"
            android:id="@+id/edit_password"
            app:layout_constraintStart_toStartOf="@+id/edit_email" app:layout_constraintTop_toBottomOf="@+id/edit_email"
            android:layout_marginBottom="39dp" app:layout_constraintBottom_toTopOf="@+id/register_button"/>
    <Button
            android:text="로그인"
            android:background="#DC143C"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            app:layout_constraintBaseline_toBaselineOf="@+id/register_button"
            app:layout_constraintEnd_toStartOf="@+id/register_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"/>

    <Button
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:background="#DC143C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_password"
            app:layout_constraintStart_toEndOf="@+id/login_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/button_google"
            android:layout_marginEnd="89dp" android:layout_marginRight="89dp"/>
    <Button
            android:id="@+id/button_google"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:text="페이스북 로그인"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/register_button" android:layout_marginBottom="160dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="101dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="101dp" android:layout_marginEnd="101dp" android:layout_marginRight="101dp"/>


</android.support.constraint.ConstraintLayout>